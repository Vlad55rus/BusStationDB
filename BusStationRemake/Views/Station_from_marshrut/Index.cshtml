@model IEnumerable<BusStationRemake.Station_from_marshrut>

@{
    ViewBag.Title = "Index";
}

<h2>Станции из маршрута</h2>

<p>
    @Html.ActionLink("Создать новую запись", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Время отправления")
        </th>
        <th>
            @Html.DisplayName("Пункт назначения")
        </th>
        <th>
            @Html.DisplayName("Название станции")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.vremya_otpravleniya)
        </td>
        <td>
            @Html.ActionLink(item.Marshrut.destination, "Details", "Marshruts", new { id = item.Marshrut.id }, null)
        </td>
        <td>
            @Html.ActionLink(item.Station.station_name, "Details", "Stations", new { id = item.Station.id }, null)
        </td>
        <td>
            @Html.ActionLink("Изменить", "Edit", new { id=item.id }) |
            @Html.ActionLink("Подробнее", "Details", new { id=item.id }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
